<UserControl x:Class="BarcodePrinterApp.BarcodeLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="141">
    <Border BorderBrush="Black" BorderThickness="1" Padding="10">
        <Grid Margin="0,0,0,7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Для логотипа -->
                <ColumnDefinition Width="*"/>
                <!-- Основное содержание -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Логотип + ОС -->
                <RowDefinition Height="100"/>
                <!-- Штрих-код -->
                <RowDefinition Height="50"/>
                <!-- Наименование -->
            </Grid.RowDefinitions>

            <!-- Логотип (левый столбец) -->
            <Image Grid.Row="1" Grid.Column="0"
                   Source="C:\Temp\logo.png"
                   Margin="0,10,7,48"/>

            <!-- Текст "ОС" под логотипом -->
            <TextBlock Grid.Row="1"
                      Text="ОС" 
                      FontSize="14"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Margin="0,56,0,0" Width="24"/>

            <!-- Штрих-код -->
            <Image x:Name="BarcodeImage" 
                     Grid.Row="1" 
                     Grid.Column="1"
                     Margin="0"
                     Stretch="UniformToFill"  
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>

            <!-- Наименование -->
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                      Text="{Binding Name}" 
                      TextWrapping="Wrap"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      MaxHeight="60" RenderTransformOrigin="0.5,0.5" Width="278" Height="20">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>